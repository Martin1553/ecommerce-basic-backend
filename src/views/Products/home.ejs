<%- include('../header'); -%>
    <div class="container">

        <br>
        <br>
        <a href="/createProduct" type="button" class="btn btn-primary">Crear un nuevo producto</a>
        <br>
        <br>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Categorie</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Disabled</th>
                </tr>
            </thead>
            <tbody>
                <% for( let i=0; i < productos.length; i++ ) { %>
                    <tr>

                        <th scope="row"><%= productos[i].id %></th>
                        <td><%= productos[i].name %></td>
                        <td><%= productos[i].image %></td>
                        <td><%= productos[i].price %></td>
                        <td><%= productos[i].description %></td>
                        <td><%= productos[i].stock %></td>
                        <td><%= productos[i].categorie %></td>
                        <td><%= productos[i].discount %>%</td>
                        <td><%= productos[i].brand %></td>
                        <td><%= productos[i].disabled %></td>
                        <td>
                            <a href="/edit/<%= productos[i].id %>" type="button" class="btn btn-primary">Editar</a>
                            <a href="/delete/<%= productos[i].id %>" type="button" class="btn btn-primary">Eliminar</a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <%- include('../footer'); -%>
